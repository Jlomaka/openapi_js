{
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "ES2022"
    ],
    "rootDirs": [
      "./",
      "./src"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}